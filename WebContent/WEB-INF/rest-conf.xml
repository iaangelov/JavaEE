<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
     	xmlns:cxf="http://cxf.apache.org/core"
		xmlns:jaxws="http://cxf.apache.org/jaxws"
		xmlns:jaxrs="http://cxf.apache.org/jaxrs"
		xsi:schemaLocation="
			http://cxf.apache.org/core http://cxf.apache.org/schemas/core.xsd
			http://www.springframework.org/schema/beans 
			http://www.springframework.org/schema/beans/spring-beans.xsd
			http://cxf.apache.org/jaxrs http://cxf.apache.org/schemas/jaxrs.xsd
			http://cxf.apache.org/jaxws http://cxf.apache.org/schemas/jaxws.xsd">
	<import resource="classpath:META-INF/cxf/cxf.xml"/>
	<import resource="classpath:META-INF/cxf/cxf-servlet.xml"/>
	<jaxrs:server id="restContainer" address="/">
		<jaxrs:serviceBeans>
			<ref bean="adminService" />
			<ref bean="hallService" />
			<ref bean="movieService" />
			<ref bean="screeningService" />
			<ref bean="ticketService" />
			<ref bean="userService" />
		</jaxrs:serviceBeans>
		<jaxrs:providers>
			<bean class="org.codehaus.jackson.jaxrs.JacksonJsonProvider" />
		</jaxrs:providers>
	</jaxrs:server>
	<bean class="panayotov.week1.services.AdminManager" id="adminService"></bean>
	<bean class="panayotov.week1.services.HallManager" id="hallService"></bean>
	<bean class="panayotov.week1.services.MovieManager" id="movieService"></bean>
	<bean class="panayotov.week1.services.ScreeningManager" id="screeningService"></bean>
	<bean class="panayotov.week1.services.TicketManager" id="ticketService"></bean>
	<bean class="panayotov.week1.services.UserManager" id="userService"></bean>
</beans>