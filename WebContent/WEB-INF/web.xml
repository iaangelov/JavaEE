<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>Week1</display-name>
  <resource-ref>
    <res-ref-name>user/Provider</res-ref-name>
    <res-type>com.sap.security.um.user.UserProvider</res-type>
  </resource-ref>
  <context-param>
    <param-name>contextConfigLocation</param-name>
    <param-value>/WEB-INF/rest-conf.xml</param-value>
  </context-param>
  <listener>
    <listener-class>
            org.springframework.web.context.ContextLoaderListener
        </listener-class>
  </listener>
  <listener>
    <listener-class>
             panayotov.week1.utils.StartupServlet 
        </listener-class>
  </listener>
  <filter>
    <filter-name>CurrentUser</filter-name>
    <filter-class>panayotov.week1.utils.CurrentUserServlet</filter-class>
</filter>
<filter-mapping>
    <filter-name>CurrentUser</filter-name>
    <url-pattern>/*</url-pattern>
</filter-mapping>
  <servlet>
    <description>Apache CXF Endpoint</description>
    <display-name>cxf</display-name>
    <servlet-name>cxf</servlet-name>
    <servlet-class>org.apache.cxf.transport.servlet.CXFServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>cxf</servlet-name>
    <url-pattern>/rest/*</url-pattern>
  </servlet-mapping>
  <session-config>
    <session-timeout>60</session-timeout>
  </session-config>
  <ejb-local-ref>
    <ejb-ref-name>ejb/UserEJB</ejb-ref-name>
    <local>panayotov.week1.dao.UserDAO</local>
  </ejb-local-ref>
  <ejb-local-ref>
    <ejb-ref-name>ejb/MovieEJB</ejb-ref-name>
    <local>panayotov.week1.dao.MovieDAO</local>
  </ejb-local-ref>
  <ejb-local-ref>
    <ejb-ref-name>ejb/TicketEJB</ejb-ref-name>
    <local>panayotov.week1.dao.TicketDAO</local>
  </ejb-local-ref>
  <ejb-local-ref>
    <ejb-ref-name>ejb/ScreeningEJB</ejb-ref-name>
    <local>panayotov.week1.dao.ScreeningDAO</local>
  </ejb-local-ref>
  <ejb-local-ref>
    <ejb-ref-name>ejb/HallEJB</ejb-ref-name>
    <local>panayotov.week1.dao.HallDAO</local>
  </ejb-local-ref>
  <security-constraint>
    <web-resource-collection>
      <web-resource-name>Screening Page</web-resource-name>
      <url-pattern>/screenings.html</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>Everyone</role-name>
    </auth-constraint>
  </security-constraint>
  <security-constraint>
    <web-resource-collection>
      <web-resource-name>Screening Page</web-resource-name>
      <url-pattern>/screenings.html</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>Everyone</role-name>
    </auth-constraint>
  </security-constraint>
  <security-constraint>
    <web-resource-collection>
      <web-resource-name>Admin Page</web-resource-name>
      <url-pattern>/adminPanel.html</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>Admin</role-name>
    </auth-constraint>
  </security-constraint>
  <security-constraint>
    <web-resource-collection>
      <web-resource-name>Admin Screenings</web-resource-name>
      <url-pattern>/screeningsManager.html</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>Admin</role-name>
    </auth-constraint>
  </security-constraint>
  <security-constraint>
    <web-resource-collection>
      <web-resource-name>Profile Page</web-resource-name>
      <url-pattern>/profile.html</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>Everyone</role-name>
    </auth-constraint>
  </security-constraint>
  <security-constraint>
    <web-resource-collection>
      <web-resource-name>Login Page</web-resource-name>
      <url-pattern>/login.html</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>Everyone</role-name>
    </auth-constraint>
  </security-constraint>
  <security-constraint>
    <web-resource-collection>
      <web-resource-name>Logout</web-resource-name>
      <url-pattern>/rest/user/logout</url-pattern>
    </web-resource-collection>
  </security-constraint>
  <login-config>
    <auth-method>FORM</auth-method>
  </login-config>
</web-app>